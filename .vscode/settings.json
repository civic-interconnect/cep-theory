// WHY: Workspace-specific settings for consistent editing experience
// OBS: Auto-save and format-on-save improve collaboration
// ALT: Users can override in their personal settings if needed
{
  // OBS: Editor settings - apply to all file types
  "editor.formatOnSave": true, // WHY: Automatically format files on save

  // OBS: File handling - auto-save and performance
  "files.autoSave": "onFocusChange", // WHY: Auto-save prevents losing work
  "files.autoSaveDelay": 1000,
  "files.watcherExclude": {
    // WHY: Exclude build directories from file watcher
    "**/build/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true
  },

  // OBS: GitHub Actions - workflow validation
  "github-actions.workflows.pinned.workflows": [
    ".github/workflows/arxiv-prep.yml",
    ".github/workflows/build-latex.yml",
    ".github/workflows/links.yml"
  ],

  // REQ: LaTeX Workshop - required for this repo
  "latex-workshop.latex.autoBuild.run": "onSave", // WHY: Compile on save for quick feedback

  // WHY: Use one shared bibliography file in repo root (bib_shared.bib)
  // OBS: Avoids duplicate bib filenames across paper folders
  "latex-workshop.latex.bibDirs": ["."],

  // WHY: Keep build artifacts separate and predictable
  "latex-workshop.latex.outDir": "./build",

  // WHY: Enable PDF <-> source navigation
  "latex-workshop.synctex.afterBuild.enabled": true,

  // WHY: View PDF in VS Code tab
  "latex-workshop.view.pdf.viewer": "tab",

  // OBS: YAML formatting - for workflows and configs
  "yaml.format.enable": true
}
